<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#79000000"
    tools:context="com.example.louis.kaya.Info2">

    <ImageView
        android:id="@+id/expand"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/speak"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="-80dp"
        android:layout_above="@+id/stop_speech"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/stop_speech"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/stop"
        android:layout_marginBottom="-30dp"
        android:layout_marginEnd="30dp"
        android:layout_above="@+id/close_info"
        android:layout_alignParentEnd="true"/>

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:onClick="PREVIOUS"
        app:cardBackgroundColor="@color/cardview_backgroundColor"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="PREVIOUS"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/close_info"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:onClick="CLOSE_DELIVERY_INTRO"
        app:cardBackgroundColor="@color/cardview_backgroundColor"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="GOT IT"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
