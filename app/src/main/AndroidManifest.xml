<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.louis.kaya">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DemoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_demo"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".AppMenu"
            android:label="@string/title_activity_app_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TruckActivity"
            android:label="@string/title_activity_truck"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MotorActivity"
            android:label="@string/title_activity_motor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VanActivity"
            android:label="@string/title_activity_van"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".UserSignUp"
            android:label="Sign Up"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/place_picker_key" />

        <activity
            android:name=".FindAgentsMapActivity"
            android:label="@string/title_activity_find_agents_map" />

        <activity
            android:name=".PlacePickerActivity"
            android:label="@string/title_place_picker" />

        <activity
            android:name=".SignUpSuccess"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".IntroActivity" />

        <activity
            android:name=".DeliveryPageInfo"
            android:theme="@style/Theme.Transparent" />

        <activity android:name=".PaymentSuccess"
            android:theme="@style/Theme.Transparent"/>

    </application>

</manifest>